<div class="modal fade modal-draggable" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
  <% if (site.loginOptions('facebook') || site.loginOptions('google') || site.loginOptions('twitter') || site.loginOptions('github') ) { %>
  <div class="modal-dialog modal-lg" style="max-width: 700px;">
  <% } else { %>
  <div class="modal-dialog">
  <% } %>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="loginModalLabel">Log in</h4>
      </div>
      <div class="modal-body">
        <form name="login" method="post" action="/login" data-validator="true">
          <div class="row">
            <% if (site.loginOptions('facebook') || site.loginOptions('google') || site.loginOptions('twitter') || site.loginOptions('github') ) { %>
            <div class="col-sm-6">
              <h4 class="text-center">Use an existing account</h4>
              <br/>
              <% if (site.loginOptions('facebook')) { %>
              <a href="/auth/facebook" class="btn btn-block btn-default btn-facebook btn-social"><i class="fa fa-lg fa-fw fa-facebook"></i> Sign in with Facebook</a>
              <% } %>
              <% if (site.loginOptions('google')) { %>
              <a href="/auth/google" class="btn btn-block btn-default btn-google-plus btn-social"><i class="fa fa-lg fa-fw fa-google-plus"></i> Sign in with Google</a>
              <% } %>
              <% if (site.loginOptions('twitter')) { %>
              <a href="/auth/twitter" class="btn btn-block btn-default btn-twitter btn-social"><i class="fa fa-lg fa-fw fa-twitter"></i> Sign in with Twitter</a>
              <% } %>
              <% if (site.loginOptions('github')) { %>
              <a href="/auth/github" class="btn btn-block btn-default btn-github btn-social"><i class="fa fa-lg fa-fw fa-github"></i> Sign in with GitHub</a>
              <% } %>
              <br/>
            </div>
            <div class="col-sm-6">
              <h4 class="text-center">Use an email address</h4>
            <% } else { %>
            <div class="col-sm-8 col-sm-push-2">
            <% } %>
              <br/>
              <div class="messages"></div>
              <input type="hidden" name="_csrf" value="<%= _csrf %>">
              <div class="form-group">
                <label for="email" class="control-label">Email</label><input type="text" name="email" id="email" placeholder="Email" autofocus="" class="form-control">
              </div>
              <div class="form-group">
                <label for="password" class="control-label">Password</label><input type="password" name="password" id="password" placeholder="Password" class="form-control">
              </div>
              <div class="form-group text-right">
                <a href="/reset-password" class="btn btn-default"><i class="fa fa-fw fa-key"></i> Reset password</a> 
                <button type="submit" class="btn btn-primary"><i class="fa fa-fw fa-sign-in"></i> Log in</button> 
              </div>
            </div>
          </div>
          <p class="text-center" style="margin: 0;">
            <a href="#" data-dismiss="modal" data-toggle="modal" data-target="#signupModal" class="btn btn-link">Don't have an account?</a>
          </p>
        </form>
      </div>
    </div>
  </div>
</div>
<div class="modal fade modal-draggable" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="signupModalLabel" aria-hidden="true">
  <% if (site.loginOptions('facebook') || site.loginOptions('google') || site.loginOptions('twitter') || site.loginOptions('github') ) { %>
  <div class="modal-dialog modal-lg" style="max-width: 700px;">
  <% } else { %>
  <div class="modal-dialog">
  <% } %>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="signupModalLabel">Sign up</h4>
      </div>
      <div class="modal-body">
        <form name="signup" method="post" action="/signup" data-validator="true">
          <div class="row">
            <% if (site.loginOptions('facebook') || site.loginOptions('google') || site.loginOptions('twitter') || site.loginOptions('github') ) { %>
            <div class="col-sm-6">
              <h4 class="text-center">Use an existing account</h4>
              <br/>
                <% if (site.loginOptions('facebook')) { %>
                <a href="/auth/facebook" class="btn btn-block btn-default btn-facebook btn-social"><i class="fa fa-lg fa-fw fa-facebook"></i> Sign in with Facebook</a>
                <% } %>
                <% if (site.loginOptions('google')) { %>
                <a href="/auth/google" class="btn btn-block btn-default btn-google-plus btn-social"><i class="fa fa-lg fa-fw fa-google-plus"></i> Sign in with Google</a>
                <% } %>
                <% if (site.loginOptions('twitter')) { %>
                <a href="/auth/twitter" class="btn btn-block btn-default btn-twitter btn-social"><i class="fa fa-lg fa-fw fa-twitter"></i> Sign in with Twitter</a>
                <% } %>
                <% if (site.loginOptions('github')) { %>
                <a href="/auth/github" class="btn btn-block btn-default btn-github btn-social"><i class="fa fa-lg fa-fw fa-github"></i> Sign in with GitHub</a>
                <% } %>
                <br/>
            </div>
            <div class="col-sm-6">
              <h4 class="text-center">Use an email address</h4>
            <% } else { %>
            <div class="col-sm-8 col-sm-push-2">
            <% } %>
              <br/>
              <div class="messages"></div>
              <input type="hidden" name="_csrf" value="<%= _csrf %>">
              <div class="form-group">
                <label for="email" class="control-label">Email</label>
                <input type="email" name="email" id="email" placeholder="Email" autofocus="" class="form-control">
              </div>
              <div class="form-group">
                <label for="password" class="control-label">Password</label>
                <input type="password" name="password" id="password" placeholder="Password" class="form-control">
              </div>
              <div class="form-group">
                <label for="confirmPassword" class="control-label">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" class="form-control">
              </div>
              <div class="form-group">
                <a href="#" data-dismiss="modal" data-toggle="modal" data-target="#loginModal" class="btn btn-link pull-left" style="padding-left: 0;">Already have an account?</a>
                <button type="submit" class="btn pull-right btn-primary"><i class="fa fa-fw fa-user-plus"></i> Sign up</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>